<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <%= form_for(@micropost) do |f| %>
        <% if @micropost.errors.any? %>
          <p class="text-danger">投稿は1～255文字以内で入力してください</p>
        <% end %>
        <div class="form-group">
          <%= f.text_area :content, class: 'form-control', rows: 5 %>
        </div><br>
        <div class="text-center">
          <%= f.submit 'アイデアを投稿', class: 'btn btn-success' %>
        </div>
      <% end %>
    </aside>
    <div class="col-xs-8">
      <%= render 'microposts/microposts', microposts: @microposts %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron jumbotron_bg">
    <div class="text-center">
      <h1>アイデアポスト</h1><br>
      <p>アイデアポストは、気軽にアイデアを投稿・共有できるサービスです。<br>
         まず「簡単ログイン」でお試しください。
      </p><br><br>
      <%= form_for(:session, url: login_path) do |f| %>
        <%= f.hidden_field :email, value: "tatsuya223+ideapost@gmail.com" %>
        <%= f.hidden_field :password, value: "ideapost" %>
        <%= f.submit "簡単ログイン", class: "btn btn-danger btn-lg"%>
      <% end %><br><br><br><br>
      <%= link_to '新規登録', signup_path, class: 'btn btn-success btn-lg' %>&nbsp;&nbsp;&nbsp;
      <%= link_to 'ログイン', login_path, class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
  <div class="copyright">&nbsp;&nbsp;© Idea Post</div>
<% end %>
