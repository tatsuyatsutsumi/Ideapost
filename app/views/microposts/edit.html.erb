<div class="row">
  <div class="text-center"><br><br>
    <% if @micropost.errors.any? %>
      <p class="text-danger">投稿は1～255文字以内で入力してください</p>
    <% end %>
    <%= form_for @micropost, url: { action: :update } do |f| %>
      <%= f.text_area :content, class: "edit_micropost", placeholder: "" %><br><br>
      <div class="text-center"><%= f.submit "編集する", class: "btn btn-info btn-lg" %></div>
    <% end %>
  </div>
</div>