<ul class="media-list">
  <% microposts.each do |micropost| %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(micropost.user, options = { size: 50 }) %>" alt="">
      </div>
      <div class="media-body">
        <div>
          <%= link_to micropost.user.name, user_path(micropost.user) %> <span class="text-muted">posted at <%= micropost.created_at %></span>
        </div>
        <div>
          <p><%= micropost.content %></p>
        </div>
        <div>
          <%= render 'likes/like_button', micropost: micropost %><br />
        </div>
        <div>
          <% if current_user == micropost.user %>
            <%= link_to '編集', edit_micropost_path(micropost), class: 'btn btn-warning btn-xs' %>
            <%= link_to "削除", micropost, method: :delete, data: { confirm: "削除してよろしいですか？" }, class: 'btn btn-danger btn-xs' %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate microposts %>
</ul>